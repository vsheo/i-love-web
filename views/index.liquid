{% render 'partials/head.liquid' %}

	<!-- <section class="{{ data.sprint.name }} text-primary primary"> -->
	<section class="semester-1-midterm text-primary primary">

		{% for sprint in data.sprints %}
			{% for checkout in sprint.articles %}
			<article>
				<h2>{{ checkout.sprint }}: {{ checkout.title }}</h2>
				<h3>Datum: {{ checkout.date }}</h3>
				{% for paragraph in checkout.content %}
				<p>
					{% if paragraph.header %}
					<h4>{{ paragraph.header }}</h4>
					{% endif %}
					{{ paragraph.text | raw }}
				</p>
				{% endfor %}
			</article>
			{% endfor %}
		{% endfor %}

	</section>

	</main>

{% render 'partials/foot.liquid', squads: squads %}