{% set sprints = range(13, 21) -%}
<a href="/i-love-web/">Home</a>
<!-- Hamburger menu -->
<label class="hamburger"><input type="checkbox" id="hamburger" name="hamburger"/>
    <svg viewBox="0 0 24 24" width="48" height="48" xmlns="http://www.w3.org/2000/svg" fill="none">
        <path
            fill="var(--bun)"
            stroke="var(--stroke)"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1"
            d="M12 4c-4.623 0-8.432 1.756-8.942 6-.066.55.39 1 .942 1h16c.552 0 1.008-.45.942-1-.51-4.244-4.319-6-8.942-6z"></path>
        <path
            stroke="var(--sesame)"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 7.5h0 M12 6.5h0 M15 7.5h0"></path>
        <path
            fill="var(--cheese)"
            stroke="var(--cheese)"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12.8 11.8 L15 14.2 L17.2 11.8 Z"></path>
        <path
            fill="var(--patty)"
            stroke="var(--stroke)"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1"
            d="m15 15 3.379-3.379a2.121 2.121 0 0 1 1.5-.621H20a2 2 0 0 1 2 2v0a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2v0a2 2 0 0 1 2-2h4.515a6
                6 0 0 1 4.242 1.757L15 15z"></path>
        <path
            fill="var(--bun)"
            stroke="var(--stroke)"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1"
            d="M3 15h18v2a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3v-2z"></path>
    </svg>
</label>
<!-- Sprints -->
<nav>
    <ul class="details-container">
        <li>
            <details>
                <summary>Blogs</summary>
                <ul>
                    <li><a href="/i-love-web/Prettier‐code‐formatter/">Prettier code formatter</a></li>
                    <li><a href="/i-love-web/Living-standards-S14/">Cornershape</a></li>
                </ul>
            </details>
        </li>
        {% for sprint in sprints -%}
            {% set collectionName = "sprint " ~ sprint -%}
            {% if collections[collectionName] and collections[collectionName] | length > 0 -%}
                <li>
                    <details>
                        <summary>Sprint {{ sprint }}</summary>
                        <ul>
                            {% for post in collections[collectionName] -%}
                                <li>
                                    <a href="/i-love-web{{ post.url }}">{{ post.data.title }}</a>
                                </li>
                            {% endfor -%}
                        </ul>
                    </details>
                </li>
            {% endif -%}
        {% endfor -%}
    </ul>
</nav>
<label class="overlay" for="hamburger" aria-hidden="true"></label>